<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desenvolvedor: Arthur Mansur Barros"
            android:textAlignment="center"
            android:textColor="@color/titulo"
            android:textStyle="bold"
            android:layout_marginTop="50sp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Contatos"
            android:textColor="@color/frontend"
            android:textSize="30sp"
            android:layout_marginTop="20sp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desenvolvedores do Dagym"
            android:textColor="@color/frontend2"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:id="@+id/container_contatos"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Novoctt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Novo contato"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/Nvctt"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/arthur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arthur"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/arthur"
                android:gravity="center"
                android:layout_marginBottom="19dp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/miguel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miguel"
                android:textSize="25sp"
                android:layout_marginBottom="19dp"
                android:textColor="@color/white"
                android:background="@color/arthur"
                android:gravity="center"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/kormann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kormann"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/arthur"
                android:gravity="center"
                android:layout_marginBottom="19dp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>